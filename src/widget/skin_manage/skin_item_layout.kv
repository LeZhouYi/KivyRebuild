#:kivy 2.3.0
<SkinItemLayout>:
    size_hint: None, None
    size: dp(206), dp(429)
    orientation: 'vertical'
    padding: dp(2),dp(2),dp(2), dp(2)
    ColorBoxLayout:
        id: box_layout
        canvas_color: self.get_style("background_color")
        Image:
            id: image
            source: root.image_source
            pos: box_layout.x, box_layout.y
            size: box_layout.width, box_layout.height
    ClickLabel:
        id: role_label
        size_hint: 1,None
        height: dp(25)
        text: root.skin_text